generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nome          String
  email         String   @unique
  senha         String
  img_usuario   String
  dt_nascimento DateTime
  tp_usuario    Int

  Campanha Campanha[]
  Doacao   Doacao[]
}

model Campanha {
  id              Int     @id @default(autoincrement())
  id_organizador  Int
  titulo          String
  subtitulo       String
  descricao       String
  imagem_base64   String
  meta_doacoes    Decimal
  chave_pix       String?
  fg_dinheiro     Boolean
  fg_alimentacao  Boolean
  fg_vestuario    Boolean
  localizacao     Local?  @relation
  usuario         Usuario @relation(fields: [id_organizador], references: [id])

  Doacao          Doacao[]
}

model Doacao {
  id             Int      @id @default(autoincrement())
  id_campanha    Int
  id_doador      Int
  valor    Decimal
  fg_dinheiro    Boolean
  fg_alimentacao Boolean
  fg_vestuario   Boolean
  usuario        Usuario  @relation(fields: [id_doador], references: [id])
  campanha       Campanha @relation(fields: [id_campanha], references: [id])
}

model Local {
  id_doacao Int      @id
  latitude  Float
  longitude Float
  campanha  Campanha @relation(fields: [id_doacao], references: [id])
}
